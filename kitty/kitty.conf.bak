include themes/dracula.conf
# include themes/catppuccin/macchiato.conf

# background_opacity 0.9
# cursor none
cursor_blink_interval -1 ease-in-out
cursor_trail 1
scrollback_lines 3000

scrollback_fill_enlarged_window yes


url_prefixes file ftp ftps git http https mailto sftp ssh

strip_trailing_spaces always

select_by_word_characters @-./_~?&=%+#

input_delay 0

remember_window_size  yes
initial_window_width  1080
initial_window_height 720

window_margin_width 4

enabled_layouts tall

tab_bar_style powerline

tab_powerline_style slanted

text_composition_strategy 1.2 20


map f5 debug_config

# Edit current command via neovim, specific to zsh
# map ctrl+, send_text normal,application  \x1b[44;5u

#: }}}

map ctrl+enter toggle_layout stack


# map ctrl+t        new_tab
# map ctrl+shift+w  close_tab
# map ctrl+w  close_window
map ctrl+shift+k  set_tab_title
map ctrl+shift+enter new_window_with_cwd

map ctrl+[      previous_tab
map ctrl+]      next_tab

map ctrl+1  goto_tab 1
map ctrl+2  goto_tab 2
map ctrl+3  goto_tab 3
map ctrl+4  goto_tab 4
map ctrl+5  goto_tab 5
map ctrl+6  goto_tab 6

enable_audio_bell no


# BEGIN_KITTY_THEME
# Nord
include current-theme.conf
# END_KITTY_THEME


# BEGIN_KITTY_FONTS
font_family      family='JetBrainsMono Nerd Font Mono'
bold_font        auto
italic_font      auto
bold_italic_font auto
# END_KITTY_FONTS

# scrollback_pager nvim --cmd 'set eventignore=FileType' +'call nvim_open_term(0, {})' +'set nomodified nolist' +'$' -

map kitty_mod+h launch --type=overlay --stdin-source=@screen_scrollback nvim -M -c 'normal G'
